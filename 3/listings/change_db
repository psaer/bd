DROP TABLE CATEGORY;
ALTER TABLE TYPE ALTER COLUMN CATEGORY_ID TO P_ID;
ALTER TABLE TYPE ADD FOREIGN KEY (P_ID) REFERENCES TYPE(TYPE_ID);
ALTER TABLE PROPERTIES ADD PROP_VALUE VARCHAR(256) NOT NULL;
ALTER TABLE TYPE ALTER P_ID DROP NOT NULL;
ALTER TABLE PROPERTY DROP DESCRIPTION;
UPDATE TYPE SET P_ID=2, NAME='Мобильная видеокарта' WHERE TYPE_ID=3;
UPDATE TYPE SET P_ID=1, NAME='Видеокарта' WHERE TYPE_ID=2;
UPDATE TYPE SET P_ID=NULL, NAME='Комплектующие для ПК' WHERE TYPE_ID=1;
CREATE TABLE TYPE_PROP(
    type_id				INTEGER				NOT NULL	REFERENCES TYPE,
    property_id			INTEGER				NOT NULL    REFERENCES PROPERTY
);
